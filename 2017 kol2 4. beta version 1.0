.386
.model flat,c
.data
	mystr db  'Ovo je jedna recenica u recenici.@' //da li ovako ili  najvrv treba -> ""
.stack 4096
.code
fja proc
	;0 - veliko slovo
	; 1 - malo slovo
	; 2 - karakter '@'
	; 4 - blanko
	; 8-ostali karakteri
	push ebp
	mov ebp,esp
	
	majmunce:
	cmp al,'@'; @
		mov al,2
		jmp krajFje
	
	velikoSlovo:
	cmp al,'A'; veliko slovo
	jb maloSlovo
	cmp al,'Z'
	ja maloSlovo
		mov al,0
		jmp krajFje
	
	maloSlovo:
	cmp al,'a'; malo slovo
	jb blanko
	cmp al,'z'
	ja blanko
		mov al,1
		jmp krajFje
	
	blanko:
	cmp al,' ';
	jne ostalo
		mov al,4
		jmp krajFje

	ostalo:
		mov al,8
	krajFje:
		pop ebp
		ret 4

fja endp
main proc
	
	mov eax,0
	mov ebx,0
	lea edx,mystr
	petlja:
		cmp mystr[ebx],'@'
		jae kraj
		mov al,mystr[ebx]
		push eax
		call fja

		unut:
			cmp al,1; malo slovo
			jne skoci
			cmp al,4
			;jne 
			skoci:


		jmp unut

	jmp petlja
	kraj:
main endp
end main
